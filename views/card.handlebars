<!-- ./views/card.handlebars -->


<h1 class="mb-1 restaurant-show-title">{{ dinerOne.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ dinerOne.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ dinerOne.location }}
        <a href="{{ dinerOne.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ dinerOne.phone }}
      </p>

      <p class="mb-5">
        {{ dinerOne.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ dinerOne.image }}" alt="{{ dinerOne.name }}"
        style="max-width: 600px;">
    </div>
  </div>
</div>